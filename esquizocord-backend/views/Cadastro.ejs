<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro - EsquizoCord</title>
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <style>
      /* Estilos gerais (copiados do seu login.ejs) */
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          Helvetica, Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-image: url("/images/background.png");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        overflow: hidden;
      }

      /* Container principal */
      .login-container {
        text-align: left;
        background-color: rgba(84, 11, 112, 0.95);
        color: #fff1f1;
        padding: 40px 50px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 90%;
      }

      /* Título */
      h2 {
        text-align: center;
        margin-bottom: 25px;
        font-size: 28px;
        font-weight: 600;
      }

      /* Mensagem de Feedback/Erro */
      .feedback-message {
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 5px;
        background-color: rgba(255, 0, 0, 0.2);
        border-left: 4px solid #f04747;
        color: #fff;
        text-align: center;
       }
       .feedback-message p {
         margin: 0;
         font-weight: 500;
       }

      /* Formulário */
      form {
        display: flex;
        flex-direction: column;
      }

      label {
        margin-bottom: 5px;
        font-weight: bold;
        color: #e0c8e6;
      }

      input {
        padding: 12px;
        margin-bottom: 20px;
        border: 1px solid #955ca3;
        border-radius: 8px;
        background-color: rgba(0, 0, 0, 0.2);
        color: white;
        font-size: 16px;
      }

      input::placeholder {
        color: #b3a1b8;
      }

      input:focus {
        outline: none;
        border-color: #cc00ff;
        box-shadow: 0 0 5px rgba(204, 0, 255, 0.5);
      }

      /* Botão */
      button {
        padding: 12px;
        background-color: #cc00ff;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 600;
        transition: all 0.3s ease;
        margin-top: 10px; /* Espaço adicionado */
      }

      button:hover {
        background-color: #955ca3;
        transform: translateY(-2px);
      }

      /* Link inferior */
      .back-link {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #e0c8e6;
        text-decoration: none;
        font-size: 14px;
      }
      .back-link:hover {
        text-decoration: underline;
      }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Crie sua Conta</h2>

        <% if (typeof error !== 'undefined' && error) { %>
          <div class="feedback-message error">
            <p><%= error %></p>
          </div>
        <% } %>

        <form class="auth-form" action="/cadastro" method="POST">
            <label for="nome">Nome de Usuário:</label>
            <input type="text" name="nome" id="nome" value="<%= (typeof formData !== 'undefined' ? formData.nome : '') %>" required>

            <label for="email">Email:</label>
            <input type="email" name="email" id="email" value="<%= (typeof formData !== 'undefined' ? formData.email : '') %>" required>
            
            <label for="senha">Senha:</label>
            <input type="password" name="senha" id="senha" required>
            
            <label for="confirmar_senha">Confirmar Senha:</label>
            <input type="password" name="confirmar_senha" id="confirmar_senha" required>
            
            <div id="senha-feedback" class="feedback-message error" style="display: none; margin-top: -10px; margin-bottom: 20px;">
              <p>As senhas não conferem.</p>
            </div>

            <button type="submit">Cadastrar</button>
        </form>
        <a href="/login" class="back-link">Já tem uma conta? Faça Login</a>
    </div>

    <script>
        const senhaInput = document.getElementById('senha');
        const confirmarSenhaInput = document.getElementById('confirmar_senha');
        const feedbackDiv = document.getElementById('senha-feedback');
        const form = document.querySelector('form');

        function validarSenhas() {
            if (senhaInput.value !== confirmarSenhaInput.value && confirmarSenhaInput.value.length > 0) {
                feedbackDiv.style.display = 'block';
            } else {
                feedbackDiv.style.display = 'none';
            }
        }

        senhaInput.addEventListener('keyup', validarSenhas);
        confirmarSenhaInput.addEventListener('keyup', validarSenhas);

        form.addEventListener('submit', function(event) {
            if (senhaInput.value !== confirmarSenhaInput.value) {
                event.preventDefault();
                validarSenhas();
            }
        });
    </script>
</body>
</html>